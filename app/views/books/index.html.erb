<p id="notice"><%= notice %></p>

<h1>Library</h1>

<% if @books.length > 0%>
<table>
  <thead>
    <tr style="width: 100%">
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= link_to 'View | ', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to ' | Delete', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<h2><small>Sorry there are no books available in our database yet! Add your own below!</small></h2>
<% end %>

<br>

<%= link_to 'Add Book', new_book_path %>
